{
	"name": "Crunchyroll iFrame Player",
	"version": "1.0.3",
	"description": "Permite ver todos os v√≠deos do crunchyroll gratuitamente.",
	"author": "itallolegal",
	"icons": { "48": "icon.png" },
	"browser_action":{
		"default_title": "Crunchyroll iFrame Player",
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		"storage",
    "*://crunchy-dl.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"http://www.crunchyroll.com/*",
				"https://www.crunchyroll.com/*",
				"http://crunchy-dl.com/*",
				"https://crunchy-dl.com/*"
			],
			"css": ["content.css"],
			"js": ["content.js"]
		}
	],
	"manifest_version": 2
}